{% extends "AppBundle::layout.html.twig" %}

{% block content %}

    <style>
        input[type=text]{
            margin-bottom: 10px;
            padding:10px;            
        }
        input[type=submit]{
            margin-bottom: 10px;
            padding:10px;            
        }

    </style>

    <div class="col-lg-16" style="padding-left:  300px; padding-top:  50px">
        <div class="list-group col-lg-11 col-md-offset-1">
            <div class="expediente col-lg-10 panel panel-primary"  style="padding: 10px">
                <div class="panel-heading" style="font-size:18px;">
                   {{ accion }} Car√°tula para Expediente Nro. - {{ expediente.nroExpediente}}
                </div>
                <br/>
                {{form_start(form,{'action':'','method':'POST'})}}
                <div class="col-lg-14">
                    <label class="text-default">EXPEDIENTE ASOCIADO</label>
                    {{ form_errors(form.tema) }}
                    {{ form_widget(form.tema) }}
                    <label class="text-default">CONCEPTO</label>
                    {{ form_errors(form.concepto) }}
                    {{ form_widget(form.concepto) }}
                    <label class="text-default">FOJAS</label>
                    {{ form_errors(form.fojas) }}
                    {{ form_widget(form.fojas) }}

                    {{ form_widget(form.Aceptar) }}
                    <a class="btn btn-default" onclick="history.back()"  role="button">Volver</a>

                    {{form_end(form)}}
                </div>
            </div>
        </div>
        <script>
            $('#caratulaagregada_tema').autocompleter({
                url_list: "{{ path('tema_search') }}",
                url_get: "{{ path('tema_get') }}"
            });
        </script>

    {% endblock %}