{% extends "AppBundle::layout.html.twig" %}

{% block contentmain %}

    <style>
        input[type=text]{
            margin-bottom: 10px;
            padding:10px;            
        }
        input[type=submit]{
            margin-bottom: 10px;
            padding:10px;            
        }

    </style>
    <div class="content">

        <strong>{{ accion }} Car√°tula para Expediente Nro. - {{ expediente.nroExpediente}}</strong>

        <hr/>
        {{form_start(form,{'action':'','method':'POST'})}}
        <div class="row">
            <label class="text-default">TEMA</label>
            {{ form_errors(form.tema) }}
            {{ form_widget(form.tema) }}
            <label class="text-default">CONCEPTO</label>
            {{ form_errors(form.concepto) }}
            {{ form_widget(form.concepto) }}
            <label class="text-default">CANTIDAD DE FOJAS</label>
            {{ form_errors(form.fojas) }}
            {{ form_widget(form.fojas) }}

            {{ form_widget(form.Aceptar) }}
            <a class="btn btn-default" onclick="history.back()"  role="button">Volver</a>

            {{form_end(form)}}
        </div>
    </div>
    <script>
        $('#caratulaagregada_tema').autocompleter({
            url_list: "{{ path('tema_search') }}",
            url_get: "{{ path('tema_get') }}"
        });
    </script>

{% endblock %}