        <script>
            $(function () {
                $(".datepicker").datepicker({
                    inline: true,
                    showOtherMonths: true,
                    dayNamesMin: ['Dom', 'Lun', 'Mar', 'Mie', 'Jue', 'Vie', 'Sab'],
                });
            });
        </script>
    </head>
    <body>       
        {% if app.user != null %}
