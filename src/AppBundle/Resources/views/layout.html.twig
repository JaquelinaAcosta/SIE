                                            <li><a href="{{ path("logout") }}">Salir</a></li>
                                            {%endif%}

                                    </ul>
                                </li>
                            </ul>
                        </div><!-- /.navbar-collapse -->
                    </div><!-- /.container-fluid -->
                </nav>

