                                            <li><a href="#">Opciones</a></li>
                                            <li><a href="{{ path("editar_usuario", {'id':app.user.id}) }}">Configuración de Cuenta</a></li>
                                            <li><a href="{{ path("editar_persona", {'id':app.user.persona.id}) }}">Configuración Personal</a></li>
