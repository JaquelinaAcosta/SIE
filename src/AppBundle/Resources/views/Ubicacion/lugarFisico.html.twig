{% extends "AppBundle::layout.html.twig" %}

{% block contentmain %}
    
    <style>
        input[type=text]{
            margin-bottom: 10px;
            padding:10px;            
         }
         input[type=submit]{
            margin-bottom: 10px;
            padding:10px;            
         }

    </style>
    
    <div class="content">
   
        <strong> Nuevo Lugar FÃ­sico</strong>
        <hr/>
            {{form_start(form,{'action':'','method':'POST'})}}
             <div class="row">
                    {% if form.dependencia is defined %}
                        <label class="text-default">Dependencia:</label>
                        {{ form_errors(form.dependencia) }}
                        {{ form_widget(form.dependencia) }}
                    {% endif %}

                    <label class="text-default">TIPO</label>
                    {{ form_errors(form.tipo) }}
                    {{ form_widget(form.tipo) }}
                    <label class="text-default">DESCRIPCION</label>
                    {{ form_errors(form.descripcion) }}
                    {{ form_widget(form.descripcion) }}
                    <label class="text-default">ACCESO</label>
                    {{ form_errors(form.acceso) }}
                    {{ form_widget(form.acceso) }}                  

                    {{ form_widget(form.Aceptar) }}
                    <a class="btn btn-secondary" onclick="history.back()"  role="button">Volver</a>

                    {{form_end(form)}}
                </div>
            {{form_end(form)}}

    </div>
{% endblock %}