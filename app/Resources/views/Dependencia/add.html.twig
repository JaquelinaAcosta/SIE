{% extends "layout.html.twig" %}

{% block contentmain %} 
    <div class="content">
        {{form_start(form,{'action':'' ,'method':'POST'})}}
        <div class="title">
            {{ accion }} Dependencia
        </div>
        <hr/>
        <div class="row">
            <div class="col-lg-6">
                <label class="text-default">Descripci√≥n(<span class="text-danger">*</span>)</label>                 
                {{ form_errors(form.descripcion) }}
                {{ form_widget(form.descripcion) }}
