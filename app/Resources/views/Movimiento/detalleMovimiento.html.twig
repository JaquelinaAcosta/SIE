{% extends "layout.html.twig" %}

{% block contentmain %}
    <div class="content">
        <div class="row">
            <table class="table table-bordered"> 
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">EXPEDIENTE {{ movimiento.expediente}} </th>
                        <th scope="col"><i class="fas fa-info-circle "></i> <strong> DETALLES</th>
                    </tr>

                </thead>
                <tbody >                    
                    <tr>
                        <th class="w-25">Ubicación</th>
                        <td class="bg-white">{{movimiento.ubicacion}}</td>
                    </tr>
                    <tr>
                        <th class="w-25">Fojas Agregadas</th>
                        <td class="bg-white">{{movimiento.fojas}}</td>
                    </tr>
                    <tr>
                        <th class="w-25">Usuario del pase</th>
                        <td class="bg-white">{{ movimiento.usuario}}</td>
                    </tr>
                    <tr>
                        <th class="w-25">Fecha del pase</th>
                        <td class="bg-white">{{ movimiento.fecha|date('d-m-Y')}}</td>
                    </tr>
                    <tr>
                        <th class="w-25">Comentario</th>
                        <td class="bg-white">{{ movimiento.comentario}}</td>
                    </tr>
                    <tr>
                        <th class="w-25 ">Observación</th>
                        <td class="bg-white">{{ movimiento.observacion}}</td>
                    </tr>
                    <tr>
                        <th class="w-25">Tipo de pase</th>
                        <td class="bg-white">{{ movimiento.tiposalida}}</td>
                    </tr> 
                </tbody>
                <tfoot>
            </table>  
            <a class="btn btn-primary" href="#" onclick="history.back()"  role="button">Volver</a>

        </div>

    </div>
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>

{% endblock %}